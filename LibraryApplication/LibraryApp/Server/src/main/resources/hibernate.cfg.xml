<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/library_application</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">hello</property>

        <!-- Specify dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>


        <!-- Enable Hibernate's automatic session context management -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!--Set auto commit tru-->
        <property name="hibernate.connection.autocommit">true</property>

        <!-- Annotated classes -->
        <mapping class="server.model.Subscriber"/>
        <mapping class="server.model.Credentials"/>
        <mapping class="server.model.Rental"/>
        <mapping class="server.model.BasketItem"/>
        <mapping class="server.model.Book"/>
        <mapping class="server.model.BookInfo"/>
        <mapping class="server.model.Person"/>
        <mapping class="server.model.Librarian"/>

    </session-factory>

</hibernate-configuration>
